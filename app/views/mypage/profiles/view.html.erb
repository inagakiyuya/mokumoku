<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <div class="d-flex align-items-center mb-4 mb-lg-0">
      <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
    </div>
    <% if current_user.following?(@user) %>
      <span>
        <%= link_to "フォローを外す", user_relationships_path(@user.id), class: "badge rounded-pill bg-primary text-decoration-none text-white", method: :delete %>
      </span>
    <% else %>
      <span>
        <%= link_to "フォローする", user_relationships_path(@user.id), class: "badge rounded-pill bg-primary text-decoration-none text-white", method: :post %>
      </span>
    <% end %>
    <hr class="my-5">
    <div>
      <h4 class="mb-0">Personal Details</h4>
      <div class="mb-3">
        <label for="email-field">Name</label></br>
        <%= @user.name %>
      </div>
      <div class="mb-3">
        <label for="email-field">Email</label></br>
        <%= @user.email %>
      </div>
      <div class="mb-3">
        <label for="profile-field">Profile</label></br>
        <%= @user.profile %>
      </div>
      <div class="mb-3">
        <label for="hobby-field">Hobby</label></br>
        <%= @user.hobby %>
      </div>
    </div>
  </div>
</div>
